{% extends "base.html.twig" %}

{% block body %}
<h6 class="text text-warning">Add new note successfully !</h6>
<h4 class="text text-success">Content: {{ note.content }} </h4>
<h4 class="text text-success">Date: {{ note.date | date('d/m/Y')}} </h4>
<h4 class="text text-success">Quantity: {{ note.quantity }} </h4>
<h4 class="text text-success">Money: {{ note.money }} VND </h4>
<h4 class="text text-success">Category: {{ note.category }} </h4>
<h4 class="text text-success">Image: </h4>
   <img src=" {{ note.image }}" width="200" height="200">
{% endblock %}
