{% extends 'base.html.twig' %}

{% block title %}Laptop index{% endblock %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
    <h1>
        <a href="https://www.thegioididong.com/laptop">
            Laptop List
        </a>
    </h1>
    <a class="btn btn-outline-success mb-3" href="{{ path('app_laptop_new') }}">Create new</a>
    <table class="table table-info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Bestseller</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for laptop in laptops %}
            <tr>
                <td>{{ laptop.id }}</td>
                <td>{{ laptop.name }}</td>
                <td>{{ laptop.quantity }}</td>
                <td>{{ laptop.price }}</td>
                <td>{{ laptop.bestseller ? 'Yes' : 'No' }}</td>
                <td>
                    <img id="laptop" src="{{ laptop.image }}" width="100" height="100">
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('app_laptop_show', {'id': laptop.id}) }}">show</a>
                    <a href="{{ path('app_laptop_edit', {'id': laptop.id}) }}">
                        <img src="{{ asset('images/edit.jpg') }}" width="50" height="50">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
