{% extends "layout.html.twig" %}

{% block body %}
   <div class="row">
      <div class="col">
         <img src="{{ todo.image}}" width="300" height="300">
      </div>
      <div class="col">
         <h2 class="alert alert-primary">{{ todo.title }}</h2>
         <h3 class="text text-info">Category: {{ todo.category }}</h3>
         <h4 class="text text-secondary">Content: {{ todo.content }}</h4>
         <h5 class="text text-danger">Deadline: {{ todo.date | date("d/m/Y")}}</h5>
      </div>
   </div>
{% endblock %}