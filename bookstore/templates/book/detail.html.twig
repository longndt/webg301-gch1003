{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="row">
      <div class="col-4">
         <div class="card">
            <img src="{{ book.image }}" width="300" height="300">
         </div>
      </div>
      <div class="col-6">
         <table class="table table-bordered">
            <tr>
               <th colspan="2" class="bg-light">
                  <h2 class="text-danger">{{ book.title }} </h2>
               </th>
            </tr>
            <tr class="h4">
               <th>Published Date</th>
               <td>{{ book.date | date('d/m/Y')}}</td>
            </tr>
            <tr class="h4">
               <th>Book Price</th>
               <td>${{ book.price }} </td>
            </tr>
            <tr class="h4">
            {% if book.quantity >= 1 %}
               <th>Book Quantity</th>
               <td>{{ book.quantity }}</td>
            {% else %}
               <th>Book Quantity</th>
               <td>Out of stock</td>
            {% endif %}           
            </tr>
            <tr class="h4">
               <th>Book Genre</th>
               <td></td>
            </tr>
            <tr class="h4">
               <th>Author(s)</th>
               <td></td>
            </tr>
         </table>
      </div>
   </div>
</div>
{% endblock %}